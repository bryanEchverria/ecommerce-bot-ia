		{
			"name": "🔐 Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Guarda el token automáticamente",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('token', response.access_token);",
									"    pm.environment.set('refresh_token', response.refresh_token);",
									"    console.log('Token guardado:', response.access_token.substring(0, 50) + '...');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@sintestesia.cl\",\n    \"password\": \"Sintestesia2024\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Login para obtener token de autenticación. El token se guarda automáticamente."
					}
				},
				{
					"name": "Verificar Token",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/auth/me",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"me"
							]
						},
						"description": "Verifica que el token sea válido y muestra información del usuario"
					}
				}
			],
			"description": "Endpoints de autenticación"
		},
