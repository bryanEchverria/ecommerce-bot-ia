							"listen": "prerequest",
							"script": {
								"exec": [
									"// Genera código único para la orden",
									"const timestamp = Date.now();",
									"const orderCode = `BOT-POSTMAN-${timestamp}`;",
									"pm.environment.set('orderCode', orderCode);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"code\": \"{{orderCode}}\",\n    \"customer_name\": \"Cliente Postman (+1234567890)\",\n    \"total\": \"1199.99\",\n    \"status\": \"pending\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/tenant-orders/",
