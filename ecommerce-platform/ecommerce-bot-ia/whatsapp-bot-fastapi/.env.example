# ==============================================
# META WHATSAPP CLOUD API CONFIGURATION
# ==============================================

# Meta WhatsApp Access Token (obtener desde Meta Business)
WHATSAPP_TOKEN=your_meta_access_token_here

# Phone Number ID (obtener desde Meta Business)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Graph API Version
GRAPH_API_VERSION=v21.0

# Webhook Verification Token (configurar en Meta Business)
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token_here

# Webhook Secret (opcional, para verificar firmas)
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret_here

# ==============================================
# PROVIDER SELECTION
# ==============================================

# Proveedor de WhatsApp a usar: "meta" o "twilio"
WA_PROVIDER=meta

# ==============================================
# BACKEND INTEGRATION
# ==============================================

# URL del backend principal
BACKEND_URL=http://localhost:8002

# OpenAI API Key (para IA del bot)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API Key (opcional)
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# FLOW PAYMENT INTEGRATION
# ==============================================

# Flow API Key
FLOW_API_KEY=your_flow_api_key_here

# Flow Secret Key
FLOW_SECRET_KEY=your_flow_secret_key_here

# Flow Base URL (sandbox o producci√≥n)
FLOW_BASE_URL=https://sandbox.flow.cl/api

# Base URL para callbacks
BASE_URL=https://your-domain.com

# ==============================================
# DATABASE
# ==============================================

# URL de la base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/ecommerce

# Environment
ENVIRONMENT=development